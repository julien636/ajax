
$('#check-task-<%=@task.id%>').replaceWith("<%= check_box_tag "box", 1, task.status, data: { remote: true, url: edit_task_path(task), params: { status: !task.status}.to_param, method: "put" }, id: "box_#{task.id}"%>");
